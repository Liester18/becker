<div class="col-sm-12 col-md-12">
    <div class="widget-header widget-header-small">
        <h4>Dados dos Responsavel</h4> 
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a id="cancel_bt" class="red no-hover bigger-130" href="#" id-pac="{{paciente.getIdPaciente()}}" url="{{path('cancel_responsavel_url')}}">
            <i class="icon-exclamation-sign"></i>
            Cancelar
        </a>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <a id="save_bt" class="blue no-hover bigger-130" href="#" id-pac="{{paciente.getIdPaciente()}}" url="{{path('actualizar_responsavel_url')}}">
            <i class="icon-save"></i>
            Salvar
        </a>
    </div>
    <div class="widget-body">
        <div class="widget-box">
            {%set hFlag = true%}
            {% for oresponsavel in formulario.ordenResponsavels %}
                <div class="row form-group">
                    <div class="col-xs-6 col-md-6">
                        <div class="row-fluid position-relative">
                            <div class="panel">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        {% if hFlag == true%}           
                                            <a class="green" href="#">
                                                Dados do primero responsavel
                                            </a>
                                        {%endif%}
                                        {% if hFlag == false%}
                                            <a class="blue" href="#">
                                                Dados do segundo responsavel
                                            </a>                                                                                            
                                        {%endif%}
                                    </h4>
                                </div>
                            </div>
                            {% if hFlag == true%}
                                <div class="">
                                {%endif%}
                                {% if hFlag == false%}
                                    <div class="">
                                    {%endif%}
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="widget-box">
                                                {% if hFlag == true%}
                                                    <div class="widget-header widget-header-small header-color-green">
                                                        <label class="control-label"> Nome do responsavel </label>
                                                    </div>
                                                {%endif%}
                                                {% if hFlag == false%}
                                                    <div class="widget-header widget-header-small header-color-blue" style="background-color: #6FB3E0 !important; border: none">
                                                        <label class="control-label"> Nome do responsavel </label>
                                                    </div>
                                                {%endif%}
                                                {% if form_errors(oresponsavel.responsavel.nome) %}
                                                    <div class="alert alert-danger">
                                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                        {{ form_errors(oresponsavel.responsavel.nome) }}
                                                    </div>
                                                {% endif %}
                                                <div class="widget-body">           
                                                        {{ form_widget(oresponsavel.responsavel.nome, { 'attr': {'class' : 'dd2-content col-xs-12 col-sm-12'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="widget-box">
                                                {% if hFlag == true%}
                                                    <div class="widget-header widget-header-small header-color-green">
                                                        <label class="control-label"> Ocupa&ccedil;&atilde;o do responsavel</label>
                                                    </div>
                                                {%endif%}
                                                {% if hFlag == false%}
                                                    <div class="widget-header widget-header-small header-color-blue" style="background-color: #6FB3E0 !important; border: none">
                                                        <label class="control-label"> Ocupa&ccedil;&atilde;o do responsavel</label>
                                                    </div>
                                                {%endif%}
                                                {% if form_errors(oresponsavel.responsavel.ocupacao) %}
                                                    <div class="alert alert-danger">
                                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                        {{ form_errors(oresponsavel.responsavel.ocupacao) }}
                                                    </div>
                                                {% endif %}
                                                <div class="widget-body">
                                                        {{ form_widget(oresponsavel.responsavel.ocupacao, { 'attr': {'class' : 'dd2-content col-xs-12 col-sm-12'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="widget-box">
                                                {% if hFlag == true%}
                                                    <div class="widget-header widget-header-small header-color-green">
                                                        <label class="control-label"> Telefone para contato</label>
                                                    </div>
                                                {%endif%}
                                                {% if hFlag == false%}
                                                    <div class="widget-header widget-header-small header-color-blue" style="background-color: #6FB3E0 !important; border: none">
                                                        <label class="control-label"> Telefone para contato</label>
                                                    </div>
                                                {%endif%}
                                                {% if form_errors(oresponsavel.responsavel.telefContato) %}
                                                    <div class="alert alert-danger">
                                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                        {{ form_errors(oresponsavel.responsavel.telefContato) }}
                                                    </div>
                                                {% endif %}
                                                <div class="widget-body">
                                                        {{ form_widget(oresponsavel.responsavel.telefContato, { 'attr': {'class' : 'dd2-content col-xs-12 col-sm-12'} }) }}
                                                </div>
                                                {% if form_errors(oresponsavel.responsavel.telefContato_2) %}
                                                    <div class="alert alert-danger">
                                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                        {{ form_errors(oresponsavel.responsavel.getTelefContato2()) }}
                                                    </div>
                                                {% endif %}
                                                <div class="widget-body">
                                                        {{ form_widget(oresponsavel.responsavel.telefContato_2, { 'attr': {'class' : 'dd2-content col-xs-12 col-sm-12'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="widget-box">
                                                {% if hFlag == true%}
                                                    <div class="widget-header widget-header-small header-color-green">
                                                        <label class="control-label"> Email para contato</label>
                                                    </div>
                                                {%endif%}
                                                {% if hFlag == false%}
                                                    <div class="widget-header widget-header-small header-color-blue" style="background-color: #6FB3E0 !important; border: none">
                                                        <label class="control-label"> Email para contato</label>
                                                    </div>
                                                {%endif%}
                                                {% if form_errors(oresponsavel.responsavel.email) %}
                                                    <div class="alert alert-danger">
                                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                        {{ form_errors(oresponsavel.responsavel.email) }}
                                                    </div>
                                                {% endif %}
                                                <div class="widget-body">
                                                        {{ form_widget(oresponsavel.responsavel.email, { 'attr': {'class' : 'dd2-content col-xs-12 col-sm-12'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {%set hFlag = false%}            
                    {%endfor%}
                </div>
            </div>
        </div>
    </div>
{{ form_row(formulario._token) }}