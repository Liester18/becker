<div class="widget-box">
    <div class="widget-header">
        <h4 class="header blue">Problemas de saude</h4>
        <div class="widget-toolbar">
            <a href="#" data-action="collapse">
                <i class="1 icon-chevron-up bigger-125"></i>
            </a>
        </div>
    </div>
    <div class="widget-body">
        <div class="widget-main">
            <div class="widget-box">
                <div class="widget-body">
                    <div class="widget-main no-padding">
                        <table class="table table-striped table-bordered table-hover">
                            <thead class="thin-border-bottom">
                                <tr>
                                    <th>
                            <div class="">
                                <button id="novo-saude" url="{{path('new_probsaude_url')}}" idPaciente="{{paciente.getIdPaciente()}}" class="btn btn-xs btn-info btn-group-justified">
                                    <span class="bigger-110">Novo</span>
                                </button> 
                            </div>
                            </th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for ps in paciente.getPacienteProblemasSaude() %}
                                    <tr>
                                        <td class="">
                                            <a class="psaude" href="#" hidd="{{ps.getProblemaSaude().getIdProblemasSaude()}}">
                                                {{ps.getProblemaSaude().getNombrePsaude()| upper}} 
                                            </a>
                                            &nbsp;&nbsp;&nbsp;
                                            <a href="#" class="edit-probSaude" pat-prob-id="{{ps.getId()}}" url="{{ path('actualizar_probsaude') }}">
                                                <i class="icon-edit bigger-180"></i>
                                            </a>
                                            &nbsp;
                                            <a href="#" class="delete-probSaude" pat-prob-id="{{ps.getId()}}" url="{{ path('delete_probsaude') }}">
                                                <i class="icon-trash bigger-180"></i>
                                            </a>
                                            <div class="hide" id="{{ps.getProblemaSaude().getIdProblemasSaude()}}">
                                                <dt class="center green">
                                                Edade de diagn&oacute;stico: {{ps.getEdadeDiagnostico()}}
                                                </dt>
                                                <dd class="blue center text-info">
                                                    {{ps.getDetalhesPsalud()}}
                                                </dd>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
